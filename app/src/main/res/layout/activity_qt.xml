<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/sfondo_qt">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/question1"
        android:textAlignment="center"
        android:paddingHorizontal="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="50dp">
    </TextView>

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="20dp"
        android:paddingHorizontal="20dp"
        android:text="@string/question"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textAlignment="center"></TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btt_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:background="@drawable/microfono_btsu"
        android:paddingTop="100dp"
        android:onClick="btnRecordPressed"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btt_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:text="Stop"
        android:onClick="btnStopPressed"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btt_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:text="Play"
        android:onClick="btnPlayPressed"
        android:visibility="gone" />

    <Button
        android:id="@+id/btt_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:text="Next"
        android:onClick="btnNextPressed"/>
</LinearLayout>